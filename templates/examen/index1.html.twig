{% extends 'base1.html.twig' %}

{% block title %} Liste des Examens {% endblock %}

{% block body %}
<div class="container">
    <div class="row">
    
    <h1>Liste des Examens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FormationId</th>
                <th>titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for examan in examens %}
            <tr>
                <td>{{ examan.id }}</td>
                <td>
                    {% for form in forms %}
                    {% if form.id == examan.formationId %}
                            {{ form.titre }}
                    {% endif %}
                    {% endfor %}

                </td>
                <td>{{ examan.description }}</td>
                <td>
                    <a href="{{ path('examen_edit', {'id': examan.id}) }}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('examen_delete', {'id': examan.id}) }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

    
{% endblock %}
